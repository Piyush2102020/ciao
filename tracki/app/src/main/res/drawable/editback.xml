<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape with rounded corners and border -->
    <item>
        <shape>
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#A1A1A1" />
        </shape>
    </item>

    <!-- Shape with white color -->
    <item
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:left="2dp">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>
